      <form action="/register" method="post">
        <input class="border-2 rounded-[15px] block w-full mt-2 px-3 py-2 " type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-[15px] block w-full mt-2 px-3 py-2 " type="text" name="fullname" placeholder="Full Name">
